<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="100dp"
        android:gravity="top">
<shape>
    <gradient
        android:angle="90"
        android:startColor="#FFE9F161"
        android:centerY="0.9"
        android:centerColor="#FFE9F161"
        android:endColor="#FFE9F161"
        android:type="linear"/>
    </shape>
    </item>

    <item
        android:height="20sp"
        android:gravity="center">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#FFE9F161"
                android:centerY="0.1"
                android:centerColor="#FFE9F161"
                android:endColor="#ffffff"
                android:type="linear"/>
        </shape>
    </item>

    <item
        android:height="100dp"
        android:gravity="bottom">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#0d1031"
                android:centerY="0.1"
                android:centerColor="#FFE9F161"
                android:endColor="#FFE9F161"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>